@{
    ViewBag.Title = "TobyClassInfo";
}
<div class="well">
    <button id="add_tobyclass" type="button" class="btn btn-primary">Add</button>
    <table id="tobyclass_lut_table" class="table table-hover">
        <thead>
            <tr>
                <th>Class Name</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: clases, visible: clases().length > 0">
            <tr>
                <td data-bind="text: class_name"></td>
                <td>
                    <button type="button" class="btn btn-default" data-bind="click: $root.editedTobyClass">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button type="button" class="btn btn-default" data-bind="click: $root.removedTobyClass">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript" src="~/Scripts/default/TobyClassCommon.js"></script>
}