@model TobyStudentManagementSystem.Models.EventViewModel

<form id="eventForm" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="@Model.EventId" class="col-lg-4">
            Event Title:</label>
        <div class="col-lg-8">
            <input id = "@Model.EventId" type="text" placeholder="input event" value = "@Model.Title">
        </div>
    </div>
    <div class="form-group">
        <label for="teacher_droplist" class="col-lg-4">
            Duty Teacher:</label>
        <div class="col-lg-8">
            <input id="teacher_droplist" type="text" />
        </div>
    </div>
    <div class="form-group">
        <label for="worktype_droplist" class="col-lg-4">
            Work Type:</label>
        <div class="col-lg-8">
            <input id="worktype_droplist" type="text" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <p>@Html.CheckBoxFor(fiexed => fiexed.IsFixed) @Html.Label("Recurring event")</p>
        </div>
    </div>
</form>
